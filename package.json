{
	"name": "node-esm-with-typescript",
	"version": "0.0.0",
	"description": "Package template for using node esm with typescript",
	"license": "MIT",
	"repository": "mvllow/node-esm-with-typescript",
	"funding": "https://github.com/mvllow/node-esm-with-typescript?sponsor=1",
	"author": {
		"name": "mvllow",
		"email": "mvllow@icloud.com"
	},
	"type": "module",
	"exports": "./dist/source/index.js",
	"engines": {
		"node": "^12.20.0 || ^14.13.1 || >=16.0.0"
	},
	"scripts": {
		"test": "ava",
		"release": "np",
		"build": "del-cli dist && tsc",
		"prepare": "npm run build"
	},
	"files": [
		"dist/source"
	],
	"types": "dist/source",
	"keywords": [],
	"devDependencies": {
		"@types/node": "^15.12.2",
		"ava": "^3.15.0",
		"del-cli": "^3.0.1",
		"np": "^7.5.0",
		"prettier": "^2.3.1",
		"ts-node": "^10.0.0",
		"typescript": "^4.3.2"
	},
	"prettier": {
		"semi": false,
		"singleQuote": true,
		"useTabs": true
	},
	"ava": {
		"files": [
			"test/*"
		],
		"extensions": {
			"ts": "module"
		},
		"nonSemVerExperiments": {
			"configurableModuleFormat": true
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	}
}
